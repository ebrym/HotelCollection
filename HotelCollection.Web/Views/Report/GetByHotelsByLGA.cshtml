@model IEnumerable<HotelCollection.Web.Models.HotelRegistrationModel>

<form method="post">
    <div class="card mb-4">
        <!-- Card header -->
        <div class="card-header">
            <h3 class="mb-0">Search Parameter</h3>
        </div>
        <!-- Card body -->
        <div class="card-body">
            <!-- Form groups used in grid -->
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label form-control-label">LGA:</label>
                        <div class="col-md-4">
                            <select name="LGAId" asp-items="@ViewBag.lga"
                                    class="form-control custom-select" required>
                                <option value="">Please select category</option>
                            </select>
                        </div>

                    </div>
                  
                    <div class="form-group row">
                        <div class="input-group col-2 offset-10">
                            <input class="btn btn-primary form-control" type="submit" value="Generate" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@await Html.PartialAsync("_HotelReportPartial", Model)

@section Scripts
    {
    <script type="text/javascript">

        $(document).ready(function () {
            $('#reportTable').DataTable(
                {
                    dom: "Bfrtip",
                    buttons: [
                        'copy', 'excel', 'print', 'pdf'
                    ]
                }
            );

            $('.buttons-copy, .buttons-pdf, .buttons-excel, .buttons-print').removeClass('btn btn-secondary').addClass('btn-primary mb-2 mr-2');
        });

    </script>
}