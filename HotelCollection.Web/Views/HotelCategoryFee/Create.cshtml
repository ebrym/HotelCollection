@model HotelCollection.Web.Models.HotelCategoryFeeModel

@{
    ViewData["Title"] = "Create";
}

<div class="card mb-4">
    <!-- Card header -->
    <div class="card-header">
        <h3 class="mb-0">Add Hotel Category Fee</h3>
    </div>
    <!-- Card body -->
    <div class="card-body">
        <!-- Form groups used in grid -->
        <div class="row">
            <div class="col-md-10">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    

                    
                    <div class="form-group row">
                       
                        <label asp-for="CategoryId" class="col-md-2 col-form-label form-control-label">Category </label>
                        <div class="col-md-4">
                            <select asp-for="CategoryId" asp-items="@ViewBag.hotelCategory"
                                    class="form-control custom-select">
                                <option value="">Please select Category</option>
                            </select>
                        </div>
                        <label asp-for="Fee" class="col-md-2 col-form-label form-control-label"> Fee </label>
                        <div class="col-md-4">
                            <input asp-for="Fee" class="form-control" type="text" placeholder="Enter Fee">
                            <span asp-validation-for="Fee" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary my-4">Add Hotel Category Fee</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>