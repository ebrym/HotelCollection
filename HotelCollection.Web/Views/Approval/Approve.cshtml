@model HotelCollection.Web.Models.PaymentSetupModel

@{
    ViewData["Title"] = "Approve Request";
}
<form asp-action="Approve" method="post" enctype="multipart/form-data">
    <div class="card mb-4">
        <!-- Card header -->
        <div class="card-header">
            <h3 class="mb-0">Request Details for #-@Model.Id </h3>
        </div>
        <!-- Card body -->
        <div class="card-body">
            <!-- Form groups used in grid -->
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">
                        <label asp-for="Hotel.Name" class="col-md-2 col-form-label form-control-label">Hotel</label>
                        <div class="col-md-4">
                            @Model.Hotel.Name
                        </div>
                        <label asp-for="@Model.Hotel.Category.CategoryName" class="col-md-2 col-form-label form-control-label">Category</label>
                        <div class="col-md-4">
                            @Model.Hotel.Category.CategoryName
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Hotel.Address" class="col-md-2 col-form-label form-control-label">Address</label>
                        <div class="col-md-4">
                            @Model.Hotel.Address
                        </div>
                        <label asp-for="@Model.Hotel.LocalGovernmentArea.LGAName" class="col-md-2 col-form-label form-control-label">LGA</label>
                        <div class="col-md-4">
                            @Model.Hotel.LocalGovernmentArea.LGAName
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Hotel.CACNumber" class="col-md-2 col-form-label form-control-label">CACNumber</label>
                        <div class="col-md-4">
                            @Model.Hotel.CACNumber
                        </div>
                        <label asp-for="@Model.Hotel.Phone" class="col-md-2 col-form-label form-control-label">Phone</label>
                        <div class="col-md-4">
                            @Model.Hotel.Phone
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PaymentType.Type" class="col-md-2 col-form-label form-control-label">Payment Type</label>
                        <div class="col-md-4">
                            @Model.PaymentType.Type
                        </div>
                        <label asp-for="Amount" class="col-md-2 col-form-label form-control-label">Amount</label>
                        <div class="col-md-4">
                            @Model.Amount
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ReferenceNo" class="col-md-2 col-form-label form-control-label">Reference</label>
                        <div class="col-md-4">
                            @Model.ReferenceNo
                        </div>
                        <label asp-for="DateCreated" class="col-md-2 col-form-label form-control-label">Date</label>
                        <div class="col-md-4">
                            @Model.DateCreated
                        </div>
                    </div>
                    <input asp-for="Id" class="form-control" type="hidden">
                    <input asp-for="CurrentApprovalLevel" class="form-control" type="hidden">
                    @*   <input asp-for="JobTitle" class="form-control" type="hidden">
                        <input asp-for="Department" class="form-control" type="hidden">
                        <input type="hidden" asp-for="ProjectCode" class="form-control" id="ProjectCode">
                        <input type="hidden" asp-for="ProjectName" class="form-control" id="ProjectName">
                        <input type="hidden" asp-for="MarketerEmail" class="form-control" id="MarketerEmail">
                        <input type="hidden" asp-for="MarketerName" class="form-control" id="MarketerName">*@


                </div>
            </div>
        </div>
    </div>

 
    <div class="card mb-4">
        <!-- Card header -->
        <div class="card-header">
            <h3 class="mb-0">Approval Stages</h3>
        </div>
        <!-- Card body -->
        <div class="card-body">
            <!-- Form groups used in grid -->
            <div class="row">
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>S/N</th>
                                <th>Approval</th>
                                <th>Comments</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                var comments = ViewBag.Comments as List<HotelCollection.Web.Models.ApprovalModel>;
                            }
                            @for (int i = 0; i < comments.Count(); i++)
                            {
                                <tr id="item_@(i)">
                                    <td>@(i + 1)</td>
                                    <td class="table-user">
                                        @comments[i].ApprovalFullName
                                    </td>
                                    <td class="table-user">
                                        @comments[i].Comment
                                    </td>
                                    <td class="table-user">
                                        @comments[i].ApprovalDate
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <!-- Card header -->
        <div class="card-header">
            <h3 class="mb-0">Your Comments</h3>
        </div>
        <!-- Card body -->
        <div class="card-body">
            <!-- Form groups used in grid -->
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="ApprovalComments" class="col-md-2 col-form-label form-control-label">Comments</label>
                    <div class="col-md-10">
                        <textarea asp-for="ApprovalComments" class="form-control" required></textarea>
                        <span asp-validation-for="ApprovalComments" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <label class="custom-toggle">
            <input type="checkbox" asp-for="Approved" value="true" checked />
            <span id="toggleApprove" class="custom-toggle-slider rounded-circle" data-label-off="No" data-label-on="Yes" width="150px"></span>
        </label>
    </div>
    <div class="text-center">
        <button id="btnApprove" type="submit" class="btn btn-primary my-4">Approve</button>
        <button id="btnReject" class="btn btn-danger" data-toggle="sweet-alert" data-sweet-alert="question">Reject</button>
    </div>
</form>

    <script src="https://code.jquery.com/jquery-3.3.1.js" type="text/javascript"></script>
<script>
      
    

    $(document).ready(function () {
        $.noConflict();
        $('#btnReject').hide();


        $('#toggleApprove').on('click', function () {
           // alert("HERE");
            $("#btnApprove").toggle(this.checked);
            $('#btnReject').toggle(this.checked);
        });



    });
   
</script>
