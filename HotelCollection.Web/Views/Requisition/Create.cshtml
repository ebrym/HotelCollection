    $(document).ready(function () {
      
        $('#items_0__HotelCategoryId').on('change', function () {
            var selectedCategory = $('#items_0__HotelCategoryId option:selected').html();
            $('#items_0__HotelCategory').val(selectedCategory);
        });

        $("#Amount").on("keyup", function (event) {
            var input = $("#Amount").val();

